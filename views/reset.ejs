<div className="row mt-5">
    <div className="col-md-6 m-auto">
        <div className="card card-body">
            <h1 className="text-center mb-3">
                <i className="fas fa-user-plus"></i> Password Reset
            </h1>
            <p>Please verify your existing account details, then enter your new password.</p>
      <form action="/users/reset" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Email"
            value="<%= typeof email != ' undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="currPW">Current Password</label>
          <input
            type="password"
            id="currPW"
            name="currPW"
            class="form-control"
            placeholder="Current password"
            value="<%= typeof currPW != ' undefined' ? currPW : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="newPW">New Password</label>
          <input
            type="password"
            id="newPW"
            name="newPW"
            class="form-control"
            placeholder="New password"
            value="<%= typeof newPW != ' undefined' ? newPW : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="newPW2">Confirm New Password</label>
          <input
            type="password"
            id="newPW2"
            name="newPW2"
            class="form-control"
            placeholder="Confirm new password"
            value="<%= typeof newPW2 != ' undefined' ? newPW2 : '' %>"
          />
        </div>
          <div>
              <ul>
                  <%for (let i=0; i < errors.length; i++){%>
                  <li><%=errors[i].msg%></li>
                  <%}%>
              </ul>
          </div>
        <button type="submit" class="btn btn-primary btn-block">
          Reset Password
        </button>
          <p class="lead mt-4"> <a href="/dashboard">Return to dashboard</a></p>
      </form>
    </div>
  </div>
</div>